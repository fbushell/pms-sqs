<section class="feed js-feed -wrap">
    {.repeated section items}
        <div class="feed__item">
            <div class="feed__info -column -column--2of4">
                <div class="feed__title p">
                    <a href="{fullUrl}" class="feed__text__link js-links-navi" {.if customContent.darkTheme}data-dark-theme="1"{.end}>
                        {.if excerpt}
                            {excerpt}
                        {.or}
                            {title}
                        {.end}
                    </a>
                </div>
                <div class="feed__meta p a -grey">
                    {categories.0}
                </div>
            </div>
            <div class="feed__media -column -column--2of4 -text--center">
                <div class="feed__media__wrap">
                    <a href="{fullUrl}" class="feed__media__link js-links-navi" {.if customContent.darkTheme}data-dark-theme="1"{.end}>
                        {@|apply image.block}
                    </a>
                    <div class="feed__quickview">
                        <div class="feed__quickview__wrap">
                            <a class="feed__quickview__hit" {.equal? categories.0 "Playlists"}href="{sourceUrl}" target="_blank"{.or}href="#"{.end}>
                                <div class="feed__quickview__icon">{@|apply svg-play.block}</div>
                                <div class="feed__quickview__text p -light">
                                    {.if customContent.quickText}
                                        {customContent.quickText}
                                    {.or}
                                        {.equal? categories.0 "Playlists"}
                                            Listen on SoundCloud
                                        {.or}
                                            Quick view
                                        {.end}
                                    {.end}
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {.end}
</section>
