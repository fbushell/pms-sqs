<section class="feed js-feed -wrap">
    {.repeated section items}
        <article class="feed__item -exp">
            <div class="feed__info -column -column--2of4">
                <div class="feed__title p">
                    <a href="{fullUrl}">
                        {.if excerpt}
                            {excerpt}
                        {.or}
                            {title}
                        {.end}
                    </a>
                </div>
                <div class="feed__meta p -grey">
                    {.repeated section categories}
                        <a href="{collection.fullUrl}?category={@}" class="">{@}</a>
                    {.end}
                </div>
            </div>
            <div class="feed__media -column -column--2of4 -text--center">
                <a href="{fullUrl}">
                    {@|apply image.block}
                </a>
            </div>
        </article>
    {.end}
</section>
