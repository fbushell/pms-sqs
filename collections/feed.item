{.section item}
    <article class="article js-article -wrap" data-title="{.if excerpt}{excerpt|htmlattr}{.or}{title}{.end}" data-category="{.repeated section categories}{@}{.end}">
        <header class="article__header">
            <div class="article__title p">{item.title}</div>
            <div class="article__meta p -grey">{item.categories.0}</div>
        </header>
        <section class="article__image">
            {@|apply image.block}
        </section>
    </article>
{.end}
